<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <ImageView
            android:id="@+id/R_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/R_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_img_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Welcome Onbard!"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/R_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_txt_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ly_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/R_txt_2"
            android:orientation="vertical"
            android:padding="30dp">

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsregular"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true" />

        </LinearLayout>

        <Button
            android:id="@+id/register_button"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_1"
            android:layout_centerHorizontal="true"
            android:width="300dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/daftar"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/msk"
            android:layout_width="341dp"
            android:layout_height="18dp"
            android:layout_below="@+id/register_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/garis" />

        <ImageButton
            android:id="@+id/google"
            android:layout_width="341dp"
            android:layout_height="70dp"
            android:layout_below="@id/msk"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/google_btn" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/google"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/sudah_punya_akun"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/_masuk"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>